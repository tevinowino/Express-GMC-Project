doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Professional barbershop offering premium haircuts, beard trims, and grooming services")
    title= `Barbershop | ${title}`
    link(rel='stylesheet', href='./output.css')
    script(src="https://cdn.tailwindcss.com")
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.10.3/cdn.min.js" defer)
    style.
      body {
        font-family: 'Poppins', sans-serif;
      }
      .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }

  body(class="bg-gradient-to-b from-gray-900 to-black text-white relative")
    //- Announcement Bar
    div(class="bg-yellow-600 text-black px-4 py-2 text-center text-sm font-medium")
      span ðŸŽ‰ New Client Special: 20% off your first haircut! Book now

    //- Header with responsive navigation
    header(class="bg-black/95 sticky top-0 z-50 border-b border-gray-800")
      div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
        div(class="flex justify-between items-center py-4")
          //- Logo
          div(class="flex items-center space-x-3")
            svg(class="w-10 h-10 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.6 12l-4.2-4.2M10.8 16.2l4.2-4.2M4.8 21.6A2.4 2.4 0 0 1 2.4 19.2V4.8A2.4 2.4 0 0 1 4.8 2.4h14.4a2.4 2.4 0 0 1 2.4 2.4v14.4a2.4 2.4 0 0 1-2.4 2.4H4.8z")
            div
              span(class="text-2xl font-bold") Barbershop
              p(class="text-xs text-gray-400") Est. 2024

          //- Desktop Navigation
          nav(class="hidden md:flex items-center space-x-8")
            a(href="/" class="nav-link hover:text-yellow-500 transition-colors") Home
            a(href="/our-services" class="nav-link hover:text-yellow-500 transition-colors") Services
            a(href="/contact-us" class="nav-link hover:text-yellow-500 transition-colors") Contact
            button(class="bg-yellow-500 text-black px-6 py-2 rounded-full font-semibold hover:bg-yellow-400 transition-colors") Book Now

          //- Mobile Menu Button
          div(class="md:hidden" x-data="{ isOpen: false }")
            button(
              @click="isOpen = !isOpen"
              class="text-gray-400 hover:text-white focus:outline-none focus:text-white"
            )
              svg(x-show="!isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16")
              svg(x-show="isOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12")

            //- Mobile Navigation Menu
            div(
              x-show="isOpen"
              x-transition:enter="transition ease-out duration-100"
              x-transition:enter-start="transform opacity-0 scale-95"
              x-transition:enter-end="transform opacity-100 scale-100"
              class="absolute top-full left-0 right-0 bg-black/95 border-b border-gray-800 p-4"
            )
              div(class="px-2 pt-2 pb-3 space-y-1")
                a(href="/" class="block px-3 py-2 rounded-md text-base font-medium hover:text-yellow-500 hover:bg-gray-800") Home
                a(href="/our-services" class="block px-3 py-2 rounded-md text-base font-medium hover:text-yellow-500 hover:bg-gray-800") Services
                a(href="/contact-us" class="block px-3 py-2 rounded-md text-base font-medium hover:text-yellow-500 hover:bg-gray-800") Contact
                button(class="w-full mt-4 bg-yellow-500 text-black px-6 py-2 rounded-full font-semibold hover:bg-yellow-400 transition-colors") Book Now

    //- Main Content Area
    main(class="min-h-screen")
      block content

    //- Contact Strip
    section(class="bg-yellow-500 text-black py-6")
      div(class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8")
        div(class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center")
          div(class="flex items-center justify-center space-x-2")
            svg(class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
            p(class="font-medium") Mon-Sat: 9am - 5pm
          div(class="flex items-center justify-center space-x-2")
            svg(class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z")
            p(class="font-medium") (555) 123-4567
          div(class="flex items-center justify-center space-x-2")
            svg(class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z")
            p(class="font-medium") 123 Main St, City, State

    //- Footer
    footer(class="bg-black py-12 px-6")
      div(class="max-w-7xl mx-auto")
        div(class="grid grid-cols-1 md:grid-cols-4 gap-8")
          //- Brand Section
          div(class="space-y-4")
            div(class="flex items-center space-x-2")
              svg(class="w-8 h-8 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.6 12l-4.2-4.2M10.8 16.2l4.2-4.2M4.8 21.6A2.4 2.4 0 0 1 2.4 19.2V4.8A2.4 2.4 0 0 1 4.8 2.4h14.4a2.4 2.4 0 0 1 2.4 2.4v14.4a2.4 2.4 0 0 1-2.4 2.4H4.8z")
              span(class="text-xl font-bold") Barbershop
            p(class="text-sm text-gray-400") Your premier destination for professional grooming and style.

          //- Quick Links
          div
            h4(class="text-lg font-semibold mb-4") Quick Links
            ul(class="space-y-2 text-sm text-gray-400")
              li
                a(href="/about" class="hover:text-yellow-500 transition-colors") About Us
              li
                a(href="/services" class="hover:text-yellow-500 transition-colors") Services
              li
                a(href="/gallery" class="hover:text-yellow-500 transition-colors") Gallery
              li
                a(href="/team" class="hover:text-yellow-500 transition-colors") Our Team

          //- Legal
          div
            h4(class="text-lg font-semibold mb-4") Legal
            ul(class="space-y-2 text-sm text-gray-400")
              li
                a(href="/privacy" class="hover:text-yellow-500 transition-colors") Privacy Policy
              li
                a(href="/terms" class="hover:text-yellow-500 transition-colors") Terms of Service
              li
                a(href="/faq" class="hover:text-yellow-500 transition-colors") FAQ

          //- Social & Contact
          div
            h4(class="text-lg font-semibold mb-4") Connect With Us
            div(class="flex space-x-4 mb-4")
              a(href="#" class="text-gray-400 hover:text-yellow-500 transition-colors")
                svg(class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24")
                  path(d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z")
